services:
  - type: worker
    name: telegram-broadcast-bot
    runtime: docker
    dockerfilePath: ./Dockerfile
    autoDeploy: true
    envVars:
      - key: BOT_TOKEN
        fromSecret: true
      - key: ADMIN_IDS
        fromSecret: true
      - key: PYTHONUNBUFFERED
        value: 1
    disks:
      - name: data-disk
        mountPath: /app/data
        sizeGB: 1
